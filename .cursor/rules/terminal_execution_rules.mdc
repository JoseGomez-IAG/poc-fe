# Windows PowerShell - Universal retry with project context
function Invoke-UniversalCommandWithRetry {
    param(
        [string]$Command,
        [string]$ProjectType,
        [string]$Platform = "Windows",
        [int]$MaxRetries = 3,
        [int]$DelaySeconds = 5,
        [hashtable]$ProjectSpecificOptions = @{}
    )

